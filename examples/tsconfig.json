{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": false,
    "sourceMap": true,
    "removeComments": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "buildOptions": {},
  "compileOnSave": false,
  "exclude": ["node_modules", "dist"]
}
